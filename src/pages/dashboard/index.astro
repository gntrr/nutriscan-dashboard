---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import StatsCard from '../../components/react/StatsCard';
import StatusGiziChart from '../../components/react/StatusGiziChart';
import { supabase } from '../../lib/supabase';
import { 
  Users, 
  AlertTriangle, 
  AlertCircle, 
  CheckCircle, 
  BarChart3, 
  MapPin, 
  Calendar, 
  Clock, 
  PieChart,
  FileText,
  Plus
} from 'lucide-react';

const nakes = Astro.locals.nakes;

if (!nakes) {
  return Astro.redirect('/login');
}

// Get dashboard overview stats
const { data: stats, error: statsError } = await supabase
  .from('nakes_dashboard_overview')
  .select('*')
  .eq('wilayah_puskesmas', nakes.wilayah_puskesmas)
  .single();

// Default values if no data
const dashboardStats = stats || {
  total_anak: 0,
  gizi_buruk: 0,
  gizi_kurang: 0,
  gizi_baik: 0,
  gizi_lebih: 0,
  rata_rata_usia_bulan: 0,
  jumlah_laki_laki: 0,
  jumlah_perempuan: 0,
};

// Get recent children updates (last 5)
const { data: recentChildren } = await supabase
  .from('nakes_children_list')
  .select('nama_balita, age_months, kategori_status_gizi, last_checkup')
  .eq('wilayah_puskesmas', nakes.wilayah_puskesmas)
  .order('last_checkup', { ascending: false })
  .limit(5);
---

<DashboardLayout title="Dashboard">
  <div class="space-y-8">
    <!-- Header with Gradient Background -->
    <div class="relative overflow-hidden bg-gradient-to-r from-[#4A7C59] via-[#3A6249] to-[#2A4A35] rounded-2xl shadow-xl p-8 text-white">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
          <pattern id="grid" x="0" y="0" width="10" height="10" patternUnits="userSpaceOnUse">
            <circle cx="5" cy="5" r="1" fill="white"/>
          </pattern>
          <rect x="0" y="0" width="100" height="100" fill="url(#grid)"/>
        </svg>
      </div>
      
      <div class="relative flex items-center justify-between">
        <div>
          <div class="flex items-center space-x-3 mb-3">
            <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
              <BarChart3 client:load className="w-7 h-7" />
            </div>
            <h1 class="text-4xl font-bold">Dashboard Overview</h1>
          </div>
          <p class="text-[#B8E6E0] text-lg mb-2">
            Selamat datang kembali, <span class="font-bold text-white">{nakes.nama_lengkap}</span> ðŸ‘‹
          </p>
          <div class="flex items-center space-x-4 text-sm text-[#B8E6E0]/90">
            <div class="flex items-center space-x-2">
              <MapPin client:load className="w-4 h-4" />
              <span>{nakes.wilayah_puskesmas}</span>
            </div>
            <span class="text-white/50">â€¢</span>
            <span>{nakes.kota}, {nakes.provinsi}</span>
          </div>
        </div>
        
        <div class="hidden lg:block">
          <div class="text-right">
            <div class="inline-flex items-center space-x-2 bg-white/20 backdrop-blur-sm rounded-lg px-4 py-2 mb-2">
              <Clock client:load className="w-5 h-5" />
              <span class="font-medium">{new Date().toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}</span>
            </div>
            <p class="text-sm text-[#B8E6E0]/80">Data diperbarui secara real-time</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <StatsCard
        client:load
        title="Total Anak"
        value={dashboardStats.total_anak}
        color="primary"
        iconComponent={Users}
      />

      <StatsCard
        client:load
        title="Gizi Buruk"
        value={dashboardStats.gizi_buruk}
        color="red"
        iconComponent={AlertTriangle}
      />

      <StatsCard
        client:load
        title="Gizi Kurang"
        value={dashboardStats.gizi_kurang}
        color="yellow"
        iconComponent={AlertCircle}
      />

      <StatsCard
        client:load
        title="Gizi Baik"
        value={dashboardStats.gizi_baik}
        color="green"
        iconComponent={CheckCircle}
      />
    </div>

    <!-- Charts and Details -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Status Gizi Chart -->
      <div class="card shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Distribusi Status Gizi</h2>
          <div class="w-10 h-10 bg-[#B8E6E0] rounded-lg flex items-center justify-center">
            <PieChart client:load className="w-6 h-6 text-[#4A7C59]" />
          </div>
        </div>
        <StatusGiziChart
          client:load
          data={{
            gizi_buruk: dashboardStats.gizi_buruk,
            gizi_kurang: dashboardStats.gizi_kurang,
            gizi_baik: dashboardStats.gizi_baik,
            gizi_lebih: dashboardStats.gizi_lebih,
          }}
        />
      </div>

      <!-- Additional Stats -->
      <div class="card shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Statistik Tambahan</h2>
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
            <BarChart3 client:load className="w-6 h-6 text-blue-600" />
          </div>
        </div>

        <div class="space-y-4">
          <div class="group relative overflow-hidden flex justify-between items-center p-5 bg-gradient-to-r from-purple-50 to-purple-100 rounded-xl hover:shadow-md transition-all duration-300 cursor-pointer">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-purple-200 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <Calendar client:load className="w-7 h-7 text-purple-700" />
              </div>
              <div>
                <p class="text-sm font-semibold text-purple-600 uppercase tracking-wide">Rata-rata Usia</p>
                <span class="text-3xl font-bold text-purple-900">
                  {dashboardStats.rata_rata_usia_bulan 
                    ? `${Math.floor(dashboardStats.rata_rata_usia_bulan / 12)}.${Math.round((dashboardStats.rata_rata_usia_bulan % 12) / 12 * 10)} tahun`
                    : '-'}
                </span>
              </div>
            </div>
          </div>

          <div class="group relative overflow-hidden flex justify-between items-center p-5 bg-gradient-to-r from-blue-50 to-blue-100 rounded-xl hover:shadow-md transition-all duration-300 cursor-pointer">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-blue-200 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <Users client:load className="w-7 h-7 text-blue-700" />
              </div>
              <div>
                <p class="text-sm font-semibold text-blue-600 uppercase tracking-wide">Laki-laki</p>
                <span class="text-3xl font-bold text-blue-900">{dashboardStats.jumlah_laki_laki}</span>
              </div>
            </div>
            <div class="text-right">
              <p class="text-sm text-blue-600">
                {dashboardStats.total_anak > 0 ? Math.round((dashboardStats.jumlah_laki_laki / dashboardStats.total_anak) * 100) : 0}%
              </p>
            </div>
          </div>

          <div class="group relative overflow-hidden flex justify-between items-center p-5 bg-gradient-to-r from-pink-50 to-pink-100 rounded-xl hover:shadow-md transition-all duration-300 cursor-pointer">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-pink-200 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <Users client:load className="w-7 h-7 text-pink-700" />
              </div>
              <div>
                <p class="text-sm font-semibold text-pink-600 uppercase tracking-wide">Perempuan</p>
                <span class="text-3xl font-bold text-pink-900">{dashboardStats.jumlah_perempuan}</span>
              </div>
            </div>
            <div class="text-right">
              <p class="text-sm text-pink-600">
                {dashboardStats.total_anak > 0 ? Math.round((dashboardStats.jumlah_perempuan / dashboardStats.total_anak) * 100) : 0}%
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Updates -->
    {recentChildren && recentChildren.length > 0 && (
      <div class="card shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <Clock client:load className="w-6 h-6 text-green-600" />
            </div>
            <h2 class="text-2xl font-bold text-gray-900">Update Terbaru</h2>
          </div>
          <a href="/dashboard/anak" class="inline-flex items-center space-x-2 px-4 py-2 bg-[#4A7C59] text-white rounded-lg hover:bg-[#3A6249] transition-colors duration-200 shadow-md hover:shadow-lg">
            <span class="font-medium">Lihat Semua</span>
            <svg class="w-4 h-4" stroke="currentColor" viewBox="0 0 24 24" fill="none">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  Nama Anak
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  Usia
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  Status Gizi
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  Terakhir Update
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              {recentChildren.map((child, index) => {
                const statusColor = child.kategori_status_gizi?.toLowerCase().includes('buruk')
                  ? 'badge-gizi-buruk'
                  : child.kategori_status_gizi?.toLowerCase().includes('kurang')
                  ? 'badge-gizi-kurang'
                  : child.kategori_status_gizi?.toLowerCase().includes('lebih') ||
                    child.kategori_status_gizi?.toLowerCase().includes('obesitas')
                  ? 'badge-gizi-lebih'
                  : 'badge-gizi-baik';

                return (
                  <tr class="hover:bg-gray-50 transition-colors duration-150">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="w-10 h-10 bg-gradient-to-br from-[#4A7C59] to-[#3A6249] rounded-full flex items-center justify-center text-white font-bold mr-3">
                          {child.nama_balita?.charAt(0).toUpperCase() || '?'}
                        </div>
                        <span class="text-sm font-semibold text-gray-900">{child.nama_balita}</span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-600">
                      {Math.floor(child.age_months / 12)} thn {Math.round(child.age_months % 12)} bln
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class={statusColor}>
                        {child.kategori_status_gizi}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center space-x-2 text-sm text-gray-600">
                        <Calendar client:load className="w-4 h-4" />
                        <span>
                          {new Date(child.last_checkup).toLocaleDateString('id-ID', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric',
                          })}
                        </span>
                      </div>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      </div>
    )}

    {!recentChildren || recentChildren.length === 0 && (
      <div class="card shadow-lg text-center py-16">
        <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
          <FileText client:load className="w-12 h-12 text-gray-400" />
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-3">Belum Ada Data</h3>
        <p class="text-gray-600 mb-6 max-w-md mx-auto">
          Belum ada data anak terdaftar di wilayah Anda. Data akan muncul setelah orang tua mendaftarkan anak mereka melalui aplikasi NutriScan.
        </p>
        <a href="/dashboard/anak" class="inline-flex items-center space-x-2 px-6 py-3 bg-[#4A7C59] text-white rounded-lg hover:bg-[#3A6249] transition-colors duration-200 shadow-md hover:shadow-lg font-medium">
          <Plus client:load className="w-5 h-5" />
          <span>Cek Data Anak</span>
        </a>
      </div>
    )}
  </div>
</DashboardLayout>
