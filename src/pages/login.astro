---
import '../styles/global.css';
import { ShieldCheck, BarChart3, FileText, Lock, Mail, AlertCircle, LogIn } from 'lucide-react';

// Redirect if already logged in
const session = await Astro.locals.supabase?.auth.getSession();
if (session?.data.session) {
  return Astro.redirect('/dashboard');
}

const error = Astro.url.searchParams.get('error');
const errorMessages: Record<string, string> = {
  'unauthorized': 'Anda harus login terlebih dahulu',
  'not_nakes': 'Akun Anda tidak terdaftar sebagai tenaga kesehatan',
  'forbidden': 'Anda tidak memiliki akses ke halaman tersebut',
  'invalid_credentials': 'Email atau password salah',
  'login_failed': 'Login gagal, silakan coba lagi',
};
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - NutriScan Nakes Dashboard</title>
  </head>
  <body class="bg-gradient-to-br from-[#4A7C59] via-[#3A6249] to-[#2A4A35] min-h-screen">
    <div class="min-h-screen flex items-center justify-center px-4 py-12">
      <div class="max-w-5xl w-full grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
        
        <!-- Left Side - Branding & Info -->
        <div class="hidden lg:block text-white space-y-6">
          <div class="space-y-4">
            <div class="inline-block p-4 bg-white/10 backdrop-blur-sm rounded-2xl">
              <ShieldCheck className="w-16 h-16 text-[#B8E6E0]" />
            </div>
            <h1 class="text-5xl font-bold">NutriScan</h1>
            <p class="text-[#B8E6E0] text-xl font-medium">Dashboard Tenaga Kesehatan</p>
          </div>
          
          <div class="space-y-4 pt-8">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#B8E6E0]/20 rounded-xl flex items-center justify-center">
                <BarChart3 className="w-6 h-6 text-[#B8E6E0]" />
              </div>
              <div>
                <h3 class="text-lg font-semibold">Monitoring Real-time</h3>
                <p class="text-[#B8E6E0]/80">Pantau status gizi anak di wilayah Anda</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#B8E6E0]/20 rounded-xl flex items-center justify-center">
                <FileText className="w-6 h-6 text-[#B8E6E0]" />
              </div>
              <div>
                <h3 class="text-lg font-semibold">Laporan Lengkap</h3>
                <p class="text-[#B8E6E0]/80">Untuk pelaporan ke Dinas Kesehatan</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#B8E6E0]/20 rounded-xl flex items-center justify-center">
                <Lock className="w-6 h-6 text-[#B8E6E0]" />
              </div>
              <div>
                <h3 class="text-lg font-semibold">Aman & Terenkripsi</h3>
                <p class="text-[#B8E6E0]/80">Data terlindungi dengan sistem keamanan terbaik</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="w-full">
          <!-- Mobile Logo -->
          <div class="lg:hidden text-center mb-8">
            <h1 class="text-4xl font-bold text-white mb-2">NutriScan</h1>
            <p class="text-[#B8E6E0] text-lg">Dashboard Tenaga Kesehatan</p>
          </div>

          <!-- Login Card -->
          <div class="bg-white rounded-2xl shadow-2xl p-8 lg:p-10">
            <div class="text-center mb-8">
              <h2 class="text-3xl font-bold text-gray-800 mb-2">Selamat Datang</h2>
              <p class="text-gray-600">Silakan login untuk melanjutkan</p>
            </div>

          {error && errorMessages[error] && (
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
              <p class="text-red-800 text-sm">{errorMessages[error]}</p>
            </div>
          )}

          <form id="loginForm" class="space-y-5">
            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                Email
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <Mail className="h-5 w-5 text-gray-400" />
                </div>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  autocomplete="email"
                  placeholder="nama@puskesmas.co.id"
                  class="input-field pl-12"
                />
              </div>
            </div>

            <div>
              <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
                Password
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <Lock className="h-5 w-5 text-gray-400" />
                </div>
                <input
                  type="password"
                  id="password"
                  name="password"
                  required
                  autocomplete="current-password"
                  placeholder="••••••••"
                  class="input-field pl-12"
                />
              </div>
            </div>

            <div id="errorMessage" class="hidden p-4 bg-red-50 border-l-4 border-red-500 rounded-r-lg">
              <div class="flex items-center">
                <AlertCircle className="w-5 h-5 text-red-500 mr-2" />
                <p class="text-red-800 text-sm font-medium"></p>
              </div>
            </div>

            <button
              type="submit"
              id="submitBtn"
              class="btn-primary w-full py-3.5 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
            >
              <span class="flex items-center justify-center">
                <LogIn className="w-5 h-5 mr-2" />
                Login
              </span>
            </button>
          </form>

          <div class="mt-8 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-600 text-center">
              Belum punya akun? 
              <span class="block mt-1 text-[#4A7C59] font-semibold">
                Hubungi administrator puskesmas Anda
              </span>
            </p>
          </div>
        </div>

        <div class="mt-8 text-center text-white text-sm">
          <p>&copy; 2025 NutriScan. All rights reserved.</p>
        </div>
      </div>
    </div>

    <script>
      const form = document.getElementById('loginForm') as HTMLFormElement;
      const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
      const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;

      form?.addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const email = formData.get('email') as string;
        const password = formData.get('password') as string;

        // Disable button
        submitBtn.disabled = true;
        submitBtn.textContent = 'Loading...';
        errorMessage.classList.add('hidden');

        try {
          const response = await fetch('/api/auth/login', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ email, password }),
          });

          const result = await response.json();

          if (response.ok) {
            // Success - redirect to dashboard
            window.location.href = '/dashboard';
          } else {
            // Show error
            errorMessage.querySelector('p')!.textContent = result.error || 'Login gagal';
            errorMessage.classList.remove('hidden');
            submitBtn.disabled = false;
            submitBtn.textContent = 'Login';
          }
        } catch (error) {
          errorMessage.querySelector('p')!.textContent = 'Terjadi kesalahan, silakan coba lagi';
          errorMessage.classList.remove('hidden');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Login';
        }
      });
    </script>
  </body>
</html>
